{% extends 'page/base.html.twig' %}

{% block title %}CaRent PL{% endblock %}

{% block body %}
    <div class="banner">
        <img src="../images/car.jpg" alt="Banner">
        <div class="content">
            <div class="search">
                <form class="search-form">
                    <div class="inputs">
                        <label for="city">Wpisz miasto</label>
                        <input type="text" id="city" placeholder="Just a placeholder... In fact it does nothing">
                        <label for="pickupDate">Data odbioru</label>
                        <input type="date" id="pickupDate">
                        <label for="returnDate">Data zwrotu</label>
                        <input type="date" id="returnDate">
                    </div>
                    <button type="submit">Wyszukaj samochód</button>
                </form>
            </div>
            <div class="text">
                Wypożyczalnia <br> samochodów
                <h2>
                    CaRent PL
                </h2>
            </div>
        </div>
    </div>

    <section>
        <h1 class="title">Samochody</h1>
        <hr>

        <div class="cards">
            {% for car in cars %}
                <div class="card">
                    <img src="../images/car.jpg">
                    <div class="content">
                        <h3>{{ car.manufacturer }} {{ car.model }}</h3>
                        <p>
                            <img src="../images/filter.svg">
                            {{ car.fuelType }}
                        </p>
                        <p>
                            <img src="../images/tool.svg">
                            {{ car.gearbox }}
                        </p>
                        <p>
                            <img src="../images/user.svg">
                            {{ car.seats }}-osobowy
                        </p>
                        <h2>PLN 119 <br> za dzień</h2>
                        <div class="availability">
                            <h4>Dostępny</h4><img src="../images/check.svg">
                        </div>
                        <a href="{{ path('reservation_form', {'car': car.id} ) }}">Wynajmij</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
